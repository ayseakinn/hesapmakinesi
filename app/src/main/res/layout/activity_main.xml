<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DEE1"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/solution"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_above="@+id/result"
        android:layout_margin="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/solution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solution"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A1A1"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:text="AC"
                android:textColor="#221919"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:text="7"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="8"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="9"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A1A1"
                android:insetRight="5dp"
                android:text="/"
                android:textColor="#221919"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:text="4"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="5"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="6"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_multi"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A1A1"
                android:insetRight="5dp"
                android:text="*"
                android:textColor="#221919"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:text="1"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="2"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="3"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A1A1"
                android:insetRight="5dp"
                android:text="-"
                android:textColor="#221919"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_zero"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:text="0"
                android:textColor="#221919"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="."
                android:textColor="#221919"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:insetRight="5dp"
                android:text="="
                android:textColor="#221919"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A1A1"
                android:insetRight="5dp"
                android:text="+"
                android:textColor="#221919"
                android:textSize="34sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>